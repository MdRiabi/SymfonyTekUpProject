{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-gray-900">Gestion Projets</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">{{ user.email }}</span>
                    <a href="{{ path('app_logout') }}" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                        Se déconnecter
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <div class="border-4 border-dashed border-gray-200 rounded-lg p-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Bienvenue, {{ user.prenom }}!</h2>
                <p class="text-gray-600 mb-6">Vous êtes connecté en tant qu'administrateur.</p>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-blue-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-blue-900 mb-2">Gestion des Projets</h3>
                        <p class="text-blue-700 mb-4">Gérez vos projets et leurs tâches associées.</p>
                        <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold">Accéder →</a>
                    </div>

                    <div class="bg-green-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-green-900 mb-2">Gestion des Utilisateurs</h3>
                        <p class="text-green-700 mb-4">Gérez les utilisateurs et leurs rôles.</p>
                        <a href="#" class="text-green-600 hover:text-green-800 font-semibold">Accéder →</a>
                    </div>

                    <div class="bg-purple-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-purple-900 mb-2">Gestion des Compétences</h3>
                        <p class="text-purple-700 mb-4">Gérez les compétences des équipes.</p>
                        <a href="#" class="text-purple-600 hover:text-purple-800 font-semibold">Accéder →</a>
                    </div>

                    <div class="bg-orange-50 p-6 rounded-lg">
                        <h3 class="text-lg font-semibold text-orange-900 mb-2">Rapports</h3>
                        <p class="text-orange-700 mb-4">Consultez les rapports d'activité.</p>
                        <a href="#" class="text-orange-600 hover:text-orange-800 font-semibold">Accéder →</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
