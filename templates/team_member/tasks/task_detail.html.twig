{% extends 'team_member/base_team.html.twig' %}

{% block title %}D√©tail: {{ task.nom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    
    {# Breadcrumb #}
    <nav class="flex mb-6 text-gray-500 text-sm" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('team_dashboard') }}" class="inline-flex items-center hover:text-gray-900 dark:hover:text-white">
                    <i class="fas fa-home mr-2"></i>Dashboard
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="fas fa-chevron-right mx-2"></i>
                    <a href="{{ path('team_tasks') }}" class="hover:text-gray-900 dark:hover:text-white">Mes T√¢ches</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <i class="fas fa-chevron-right mx-2"></i>
                    <span class="text-gray-400">{{ task.nom|u.truncate(30, '...') }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        {# Colonne Gauche : D√©tails T√¢che (2/3) #}
        <div class="md:col-span-2 space-y-6">
            
            {# Header T√¢che #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                    <div>
                        <div class="flex items-center gap-3 mb-2">
                            {# Badge Priorit√© #}
                            {% if task.priorite == 'URGENT' %}
                                <span class="px-3 py-1 bg-red-100 text-red-800 text-xs rounded-full font-medium">üî¥ URGENT</span>
                            {% elseif task.priorite == 'ELEVE' %}
                                <span class="px-3 py-1 bg-orange-100 text-orange-800 text-xs rounded-full font-medium">üü° √âLEV√â</span>
                            {% elseif task.priorite == 'MOYEN' %}
                                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full font-medium">‚ö™ MOYEN</span>
                            {% else %}
                                <span class="px-3 py-1 bg-gray-100 text-gray-800 text-xs rounded-full font-medium">‚ö´ FAIBLE</span>
                            {% endif %}

                            {# Badge Statut #}
                            {% if task.statut == 'TERMINE' %}
                                <span class="px-3 py-1 bg-green-100 text-green-800 text-xs rounded-full font-medium">
                                    <i class="fas fa-check-circle mr-1"></i>Termin√©e
                                </span>
                            {% elseif task.statut == 'EN_COURS' %}
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs rounded-full font-medium">
                                    <i class="fas fa-spinner mr-1"></i>En cours
                                </span>
                            {% else %}
                                <span class="px-3 py-1 bg-gray-100 text-gray-800 text-xs rounded-full font-medium">
                                    <i class="fas fa-circle mr-1"></i>√Ä faire
                                </span>
                            {% endif %}
                        </div>
                        
                        <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">{{ task.nom }}</h1>
                        
                        <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400">
                            {% if task.phase and task.phase.projet %}
                                <span class="flex items-center">
                                    <i class="fas fa-folder text-indigo-500 mr-2"></i>
                                    {{ task.phase.projet.nom }}
                                </span>
                                <span class="flex items-center">
                                    <i class="fas fa-layer-group text-purple-500 mr-2"></i>
                                    {{ task.phase.nom }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="prose dark:prose-invert max-w-none mt-6 pt-6 border-t border-gray-100 dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">Description</h3>
                    <p class="text-gray-600 dark:text-gray-300 whitespace-pre-line">
                        {{ task.description|default('Aucune description fournie.') }}
                    </p>
                </div>
            </div>

            {# Historique du Temps #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                    <i class="fas fa-history text-gray-500"></i>
                    Historique des sessions
                </h3>
                
                {% if timeSessions|length > 0 %}
                    <div class="space-y-3">
                        {% for session in timeSessions %}
                            <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-300">
                                        <i class="fas fa-clock text-sm"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-800 dark:text-white">
                                            {{ session.dateDebut|date('d/m/Y') }}
                                        </p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">
                                            {{ session.dateDebut|date('H:i') }} - 
                                            {% if session.dateFin %}
                                                {{ session.dateFin|date('H:i') }}
                                            {% else %}
                                                <span class="text-green-600 font-medium">En cours...</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span class="font-mono font-semibold text-indigo-600 dark:text-indigo-400">
                                        {{ session.dureeFormatee }}
                                    </span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                        <i class="fas fa-stopwatch text-3xl mb-2 opacity-50"></i>
                        <p>Aucune session de travail enregistr√©e</p>
                    </div>
                {% endif %}
            </div>

        </div>

        {# Colonne Droite : Timer & Actions (1/3) #}
        <div class="space-y-6">
            
            {# Timer Widget #}
            <div style="background: linear-gradient(to bottom right, #4f46e5, #7c3aed); border-radius: 1rem; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1); padding: 1.5rem; color: white; min-height: 300px; position: relative;">
                
                <div style="position: relative; z-index: 10;">
                    <h3 style="color: white; font-weight: 600; margin-bottom: 1.5rem; font-size: 1.125rem; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-stopwatch" style="color: #fbbf24;"></i> Timer
                    </h3>

                    <div style="text-align: center; margin-bottom: 1.5rem;">
                        <div id="timerDisplay" style="font-size: 3rem; font-family: monospace; color: white; font-weight: bold; margin-bottom: 1rem; letter-spacing: 0.05em;">
                            00:00:00
                        </div>
                        <p style="color: white; font-size: 0.875rem; font-weight: 500;">
                            Total cumul√© : <span id="totalTimeDisplay" style="font-weight: bold;">{{ totalTime }}</span>
                        </p>
                    </div>

                    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 0.75rem;">
                        <button id="startBtn" onclick="startTimer()" style="padding: 0.75rem 1rem; background: white; color: #4f46e5; border-radius: 0.5rem; font-weight: bold; border: none; cursor: pointer; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); transition: all 0.2s; display: {{ hasActiveTimer ? 'none' : 'flex' }}; align-items: center; justify-content: center; gap: 0.5rem;">
                            <i class="fas fa-play"></i> D√©marrer
                        </button>
                        
                        <button id="stopBtn" onclick="stopTimer()" style="padding: 0.75rem 1rem; background: #ef4444; color: white; border-radius: 0.5rem; font-weight: bold; border: none; cursor: pointer; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); transition: all 0.2s; display: {{ hasActiveTimer ? 'flex' : 'none' }}; align-items: center; justify-content: center; gap: 0.5rem; grid-column: span 2;">
                            <i class="fas fa-stop"></i> Arr√™ter
                        </button>
                    </div>
                    
                    {% if hasActiveTimer %}
                    <div style="margin-top: 1rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem; color: white; font-size: 0.875rem; animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;">
                        <div style="width: 0.5rem; height: 0.5rem; background: #4ade80; border-radius: 9999px;"></div>
                        Timer en cours...
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Actions #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <h3 class="font-semibold text-gray-800 dark:text-white mb-4">Actions</h3>
                
                <form method="POST" action="{{ path('team_task_update_status', {id: task.id}) }}">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Statut</label>
                        <select name="statut" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="A_FAIRE" {{ task.statut == 'A_FAIRE' ? 'selected' : '' }}>√Ä faire</option>
                            <option value="EN_COURS" {{ task.statut == 'EN_COURS' ? 'selected' : '' }}>En cours</option>
                            <option value="TERMINE" {{ task.statut == 'TERMINE' ? 'selected' : '' }}>Termin√©e</option>
                        </select>
                    </div>
                    <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
                        Mettre √† jour le statut
                    </button>
                </form>

                {% if task.statut != 'TERMINE' %}
                    <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
                        <form method="POST" action="{{ path('team_task_update_status', {id: task.id}) }}">
                            <input type="hidden" name="statut" value="TERMINE">
                            <button type="submit" class="w-full py-2 px-4 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2">
                                <i class="fas fa-check"></i> Marquer comme termin√©e
                            </button>
                        </form>
                    </div>
                {% endif %}
            </div>

            {# Infos Compl√©mentaires #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
                <h3 class="font-semibold text-gray-800 dark:text-white mb-4">D√©tails</h3>
                <ul class="space-y-3 text-sm">
                    <li class="flex justify-between">
                        <span class="text-gray-500 dark:text-gray-400">Deadline</span>
                        <span class="font-medium text-gray-800 dark:text-white">{{ task.deadline|date('d/m/Y') }}</span>
                    </li>
                    <li class="flex justify-between">
                        <span class="text-gray-500 dark:text-gray-400">Cr√©√©e le</span>
                        <span class="font-medium text-gray-800 dark:text-white">{{ task.dateCreation|date('d/m/Y') }}</span>
                    </li>
                    <li class="flex justify-between">
                        <span class="text-gray-500 dark:text-gray-400">Priorit√©</span>
                        <span class="font-medium text-gray-800 dark:text-white">{{ task.priorite }}</span>
                    </li>
                </ul>
            </div>

        </div>
    </div>

    {# ========================================= #}
    {# WORK LOG NOTES SECTION                   #}
    {# ========================================= #}
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <i class="fas fa-clipboard-list text-indigo-600"></i>
            Notes de Travail ({{ notes|length }})
        </h3>

        {# Form to add new note #}
        <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
            <form method="POST" action="{{ path('team_task_add_note', {id: task.id}) }}">
                {{ form_start(noteForm, {'attr': {'class': 'space-y-4'}}) }}
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Ajouter une note de travail
                    </label>
                    <input id="note-content" type="hidden" name="task_note[contenu]">
                    <trix-editor input="note-content" class="trix-content bg-white dark:bg-gray-700 dark:text-white rounded-lg border border-gray-300 dark:border-gray-600"></trix-editor>
                </div>

                <button type="submit" style="padding: 0.5rem 1rem; background: #4f46e5; color: white; border-radius: 0.5rem; font-weight: 500; border: none; cursor: pointer; transition: background-color 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" onmouseover="this.style.background='#4338ca'" onmouseout="this.style.background='#4f46e5'">
                    <i class="fas fa-save"></i>Enregistrer la note
                </button>
                
                {{ form_end(noteForm) }}
            </form>
        </div>

        {# Display existing notes #}
        {% if notes|length > 0 %}
            <div class="space-y-4">
                {% for note in notes %}
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg border-l-4 border-indigo-600">
                        <div class="flex items-start justify-between mb-2">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-indigo-100 dark:bg-indigo-900 flex items-center justify-center text-indigo-600 dark:text-indigo-300 font-semibold">
                                    {{ note.auteur.prenom|slice(0, 1) }}{{ note.auteur.nom|slice(0, 1) }}
                                </div>
                                <div>
                                    <p class="font-medium text-gray-800 dark:text-white">{{ note.auteur.prenom }} {{ note.auteur.nom }}</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        {{ note.createdAt|date('d/m/Y √† H:i') }}
                                        {% if note.isEdited %}
                                            <span class="text-gray-400">(modifi√©)</span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="prose dark:prose-invert max-w-none mt-3 text-gray-700 dark:text-gray-300">
                            {{ note.contenu|raw }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <i class="fas fa-clipboard text-3xl mb-2 opacity-50"></i>
                <p>Aucune note de travail pour le moment</p>
            </div>
        {% endif %}
    </div>

    {# ========================================= #}
    {# ATTACHMENTS SECTION                      #}
    {# ========================================= #}
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <i class="fas fa-paperclip text-green-600"></i>
            Pi√®ces Jointes ({{ attachments|length }})
        </h3>

        {# Form to upload attachment #}
        <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
            <form method="POST" action="{{ path('team_task_upload_attachment', {id: task.id}) }}" enctype="multipart/form-data">
                {{ form_start(attachmentForm, {'attr': {'class': 'space-y-4'}}) }}
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        T√©l√©charger un fichier
                    </label>
                    {{ form_widget(attachmentForm.file, {'attr': {'class': 'block w-full text-sm text-gray-900 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer bg-white dark:bg-gray-700 focus:outline-none'}}) }}
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Max 10 MB. Formats accept√©s: Images, PDF, Documents Office, Archives
                    </p>
                </div>

                <button type="submit" style="padding: 0.5rem 1rem; background: #16a34a; color: white; border-radius: 0.5rem; font-weight: 500; border: none; cursor: pointer; transition: background-color 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" onmouseover="this.style.background='#15803d'" onmouseout="this.style.background='#16a34a'">
                    <i class="fas fa-upload"></i>T√©l√©charger
                </button>
                
                {{ form_end(attachmentForm) }}
            </form>
        </div>

        {# Display attachments #}
        {% if attachments|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for attachment in attachments %}
                    <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-600 hover:shadow-md transition-shadow">
                        <div class="flex items-start justify-between mb-2">
                            <div class="flex items-center gap-2 flex-1 min-w-0">
                                <i class="fas {{ attachment.mimeType starts with 'image/' ? 'fa-file-image text-blue-600' : (attachment.mimeType == 'application/pdf' ? 'fa-file-pdf text-red-600' : 'fa-file text-gray-600') }} text-2xl"></i>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-800 dark:text-white truncate text-sm">{{ attachment.filename }}</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ attachment.filesizeFormatted }}</p>
                                </div>
                            </div>
                        </div>
                        
                        {% if attachment.mimeType starts with 'image/' %}
                            <div class="mt-2 mb-3">
                                <img src="/uploads/tasks/{{ attachment.filepath }}" alt="{{ attachment.filename }}" class="w-full h-32 object-cover rounded">
                            </div>
                        {% endif %}

                        <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-200 dark:border-gray-600">
                            <p class="text-xs text-gray-500 dark:text-gray-400">
                                {{ attachment.uploadedBy.prenom }} {{ attachment.uploadedBy.nom|slice(0, 1) }}.
                            </p>
                            <div class="flex gap-2">
                                <a href="/uploads/tasks/{{ attachment.filepath }}" download class="text-blue-600 hover:text-blue-700 text-sm">
                                    <i class="fas fa-download"></i>
                                </a>
                                <form method="POST" action="{{ path('team_task_delete_attachment', {taskId: task.id, attachmentId: attachment.id}) }}" class="inline" onsubmit="return confirm('Supprimer ce fichier ?')">
                                    <button type="submit" class="text-red-600 hover:text-red-700 text-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <i class="fas fa-file text-3xl mb-2 opacity-50"></i>
                <p>Aucune pi√®ce jointe pour le moment</p>
            </div>
        {% endif %}
    </div>

    {# ========================================= #}
    {# COMMENTS SECTION                         #}
    {# ========================================= #}
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <i class="fas fa-comments text-purple-600"></i>
            Commentaires ({{ comments|length }})
        </h3>

        {# Form to add comment #}
        <div class="mb-6">
            <form method="POST" action="{{ path('team_task_add_comment', {id: task.id}) }}">
                {{ form_start(commentForm, {'attr': {'class': 'space-y-4'}}) }}
                
                {{ form_widget(commentForm.contenu, {'attr': {'class': 'w-full px-4 py-3 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500', 'rows': 3}}) }}

                <button type="submit" style="padding: 0.5rem 1rem; background: #9333ea; color: white; border-radius: 0.5rem; font-weight: 500; border: none; cursor: pointer; transition: background-color 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" onmouseover="this.style.background='#7e22ce'" onmouseout="this.style.background='#9333ea'">
                    <i class="fas fa-paper-plane"></i>Envoyer
                </button>
                
                {{ form_end(commentForm) }}
            </form>
        </div>

        {# Display comments #}
        {% if comments|length > 0 %}
            <div class="space-y-4">
                {% for comment in comments %}
                    <div class="flex gap-3">
                        <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900 flex items-center justify-center text-purple-600 dark:text-purple-300 font-semibold flex-shrink-0">
                            {{ comment.auteur.prenom|slice(0, 1) }}{{ comment.auteur.nom|slice(0, 1) }}
                        </div>
                        <div class="flex-1 bg-gray-50 dark:bg-gray-700/50 rounded-lg p-3">
                            <div class="flex items-center justify-between mb-1">
                                <p class="font-medium text-gray-800 dark:text-white text-sm">{{ comment.auteur.prenom }} {{ comment.auteur.nom }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ comment.createdAt|date('d/m/Y H:i') }}</p>
                            </div>
                            <p class="text-gray-700 dark:text-gray-300 text-sm whitespace-pre-line">{{ comment.contenu }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <i class="fas fa-comment text-3xl mb-2 opacity-50"></i>
                <p>Aucun commentaire pour le moment</p>
            </div>
        {% endif %}
    </div>

</div>

<script>
    // Variables globales pour le timer
    let timerInterval;
    let startTime;
    const taskId = {{ task.id }};
    const hasActiveTimer = {{ hasActiveTimer ? 'true' : 'false' }};
    
    // Initialisation
    document.addEventListener('DOMContentLoaded', function() {
        if (hasActiveTimer) {
            // Si un timer est d√©j√† actif, on r√©cup√®re sa date de d√©but
            {% if activeTimer %}
                const startDateStr = "{{ activeTimer.dateDebut|date('Y-m-d H:i:s') }}";
                startTime = new Date(startDateStr);
                startTicker();
            {% endif %}
        }
    });

    function startTimer() {
        fetch(`/team/tasks/${taskId}/timer/start`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                startTime = new Date(data.start_time);
                startTicker();
                toggleButtons(true);
                // Notification (optionnel)
                console.log('Timer d√©marr√©');
            } else {
                alert(data.error || 'Erreur lors du d√©marrage du timer');
            }
        })
        .catch(error => console.error('Erreur:', error));
    }

    function stopTimer() {
        fetch(`/team/tasks/${taskId}/timer/stop`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                stopTicker();
                toggleButtons(false);
                document.getElementById('totalTimeDisplay').textContent = data.total_time_formatted;
                document.getElementById('timerDisplay').textContent = "00:00:00";
                // Recharger pour mettre √† jour l'historique
                window.location.reload();
            } else {
                alert(data.error || 'Erreur lors de l\'arr√™t du timer');
            }
        })
        .catch(error => console.error('Erreur:', error));
    }

    function startTicker() {
        if (timerInterval) clearInterval(timerInterval);
        timerInterval = setInterval(updateDisplay, 1000);
        updateDisplay(); // Mise √† jour imm√©diate
    }

    function stopTicker() {
        if (timerInterval) clearInterval(timerInterval);
    }

    function updateDisplay() {
        const now = new Date();
        // Ajustement du fuseau horaire si n√©cessaire, mais ici on travaille en local ou UTC selon config
        // Pour simplifier, on suppose que le serveur et le client sont synchro ou on utilise le timestamp
        const diff = Math.floor((now - startTime) / 1000);
        
        if (diff < 0) return; // √âviter affichage n√©gatif si d√©calage l√©ger

        const hours = Math.floor(diff / 3600);
        const minutes = Math.floor((diff % 3600) / 60);
        const seconds = diff % 60;

        document.getElementById('timerDisplay').textContent = 
            `${pad(hours)}:${pad(minutes)}:${pad(seconds)}`;
    }

    function pad(num) {
        return num.toString().padStart(2, '0');
    }

    function toggleButtons(isRunning) {
        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        
        if (isRunning) {
            startBtn.style.display = 'none';
            stopBtn.style.display = 'flex';
        } else {
            startBtn.style.display = 'flex';
            stopBtn.style.display = 'none';
        }
    }
</script>
