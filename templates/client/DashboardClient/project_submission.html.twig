{# templates/client/DashboardClient/project_submission.html.twig #}
{% extends 'client/base_client.html.twig' %}

{% block title %}Nouveau Projet - Client Dashboard{% endblock %}
{% block page_title %}Soumettre un Nouveau Projet{% endblock %}

{% block body %}
<div class="p-6">
    <div class="max-w-4xl mx-auto">
        {# En-tête #}
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-8 text-white mb-6">
            <h2 class="text-2xl font-bold mb-2">Démarrez Votre Nouveau Projet</h2>
            <p class="text-blue-100">Remplissez le formulaire ci-dessous pour soumettre votre demande de projet. Notre équipe vous répondra dans les 24 heures.</p>
        </div>

        {# Formulaire #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-8">
            <form action="#" method="POST" enctype="multipart/form-data">
                {# Section 1: Informations générales #}
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">1</div>
                        Informations Générales
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Titre du projet #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Titre du Projet <span class="text-red-500">*</span>
                            </label>
                            <input type="text" name="title" required class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ex: Développement d'un site e-commerce">
                        </div>

                        {# Type de projet #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Type de Projet <span class="text-red-500">*</span>
                            </label>
                            <select name="type" required class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Sélectionnez un type</option>
                                <option value="web">Site Web / Application Web</option>
                                <option value="mobile">Application Mobile</option>
                                <option value="desktop">Application Desktop</option>
                                <option value="api">API / Backend</option>
                                <option value="design">Design / UI/UX</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>

                        {# Catégorie #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Catégorie <span class="text-red-500">*</span>
                            </label>
                            <select name="category" required class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Sélectionnez une catégorie</option>
                                <option value="ecommerce">E-commerce</option>
                                <option value="corporate">Site Corporate</option>
                                <option value="saas">SaaS</option>
                                <option value="education">Éducation</option>
                                <option value="health">Santé</option>
                                <option value="finance">Finance</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>
                    </div>
                </div>

                {# Section 2: Description du projet #}
                <div class="mb-8 pb-8 border-b dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">2</div>
                        Description du Projet
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Description #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Description Détaillée <span class="text-red-500">*</span>
                            </label>
                            <textarea name="description" required rows="6" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Décrivez votre projet en détail: objectifs, fonctionnalités souhaitées, public cible..."></textarea>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Minimum 100 caractères</p>
                        </div>

                        {# Objectifs #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Objectifs Principaux <span class="text-red-500">*</span>
                            </label>
                            <textarea name="objectives" required rows="4" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Listez les objectifs principaux de ce projet..."></textarea>
                        </div>

                        {# Fonctionnalités clés #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Fonctionnalités Clés
                            </label>
                            <div class="space-y-2">
                                <div class="flex items-center">
                                    <input type="text" name="features[]" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ex: Système de paiement en ligne">
                                </div>
                                <div class="flex items-center">
                                    <input type="text" name="features[]" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ex: Gestion des utilisateurs">
                                </div>
                                <button type="button" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                                    <i class="fas fa-plus mr-1"></i> Ajouter une fonctionnalité
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                {# Section 3: Planning et budget #}
                <div class="mb-8 pb-8 border-b dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">3</div>
                        Planning et Budget
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {# Date de début souhaitée #}
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Date de Début Souhaitée
                                </label>
                                <input type="date" name="start_date" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>

                            {# Date de fin souhaitée #}
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Date de Fin Souhaitée
                                </label>
                                <input type="date" name="end_date" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        {# Budget estimé #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Budget Estimé
                            </label>
                            <select name="budget" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Sélectionnez une fourchette</option>
                                <option value="5000">Moins de 5 000 €</option>
                                <option value="10000">5 000 € - 10 000 €</option>
                                <option value="25000">10 000 € - 25 000 €</option>
                                <option value="50000">25 000 € - 50 000 €</option>
                                <option value="100000">50 000 € - 100 000 €</option>
                                <option value="100001">Plus de 100 000 €</option>
                            </select>
                        </div>

                        {# Priorité #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Priorité <span class="text-red-500">*</span>
                            </label>
                            <div class="flex items-center space-x-4">
                                <label class="flex items-center">
                                    <input type="radio" name="priority" value="low" class="mr-2">
                                    <span class="text-sm text-gray-700 dark:text-gray-300">Basse</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="priority" value="medium" checked class="mr-2">
                                    <span class="text-sm text-gray-700 dark:text-gray-300">Moyenne</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="priority" value="high" class="mr-2">
                                    <span class="text-sm text-gray-700 dark:text-gray-300">Haute</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="priority" value="urgent" class="mr-2">
                                    <span class="text-sm text-red-600 dark:text-red-400 font-medium">Urgente</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                {# Section 4: Documents et fichiers #}
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">4</div>
                        Documents et Fichiers
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Upload de fichiers #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Pièces Jointes
                            </label>
                            <div class="border-2 border-dashed dark:border-gray-600 rounded-lg p-6 text-center hover:border-blue-500 transition-colors cursor-pointer">
                                <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                                <p class="text-sm text-gray-600 dark:text-gray-400">
                                    Glissez-déposez vos fichiers ici ou <span class="text-blue-600 font-medium">parcourez</span>
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                                    PDF, DOC, DOCX, XLS, XLSX, PNG, JPG (Max 10 Mo)
                                </p>
                                <input type="file" name="attachments[]" multiple class="hidden">
                            </div>
                        </div>

                        {# Notes additionnelles #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Notes Additionnelles
                            </label>
                            <textarea name="notes" rows="3" class="w-full px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Toute information supplémentaire que vous souhaitez partager..."></textarea>
                        </div>
                    </div>
                </div>

                {# Actions #}
                <div class="flex items-center justify-between pt-6 border-t dark:border-gray-700">
                    <a href="{{ path('client_dashboard') }}" class="px-6 py-2 border dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        Annuler
                    </a>
                    <div class="flex items-center space-x-3">
                        <button type="button" class="px-6 py-2 border dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <i class="fas fa-save mr-2"></i>
                            Enregistrer comme brouillon
                        </button>
                        <button type="submit" class="px-6 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg hover:from-blue-700 hover:to-blue-800 transition-colors shadow-md">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Soumettre le Projet
                        </button>
                    </div>
                </div>
            </form>
        </div>

        {# Aide #}
        <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle text-blue-600 dark:text-blue-400 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-2">Besoin d'aide ?</h4>
                    <p class="text-sm text-blue-800 dark:text-blue-200">
                        Notre équipe est là pour vous accompagner. N'hésitez pas à nous contacter si vous avez des questions sur le formulaire ou votre projet.
                    </p>
                    <a href="#" class="text-sm text-blue-600 dark:text-blue-400 font-medium mt-2 inline-block hover:underline">
                        Contacter le support <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
