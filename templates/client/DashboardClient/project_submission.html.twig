{# templates/client/DashboardClient/project_submission.html.twig #}
{% extends 'client/base_client.html.twig' %}

{% block title %}{% if isEdit is defined and isEdit %}Modifier le Projet{% else %}Nouveau Projet{% endif %} - Client Dashboard{% endblock %}
{% block page_title %}{% if isEdit is defined and isEdit %}Modifier le Projet{% else %}Soumettre un Nouveau Projet{% endif %}{% endblock %}

{% block body %}
<div class="p-6">
    <div class="max-w-4xl mx-auto">
        {# En-tête #}
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-8 text-white mb-6">
            <h2 class="text-2xl font-bold mb-2">{% if isEdit is defined and isEdit %}Modifier Votre Projet{% else %}Démarrez Votre Nouveau Projet{% endif %}</h2>
            <p class="text-blue-100">{% if isEdit is defined and isEdit %}Modifiez les informations de votre projet ci-dessous.{% else %}Remplissez le formulaire ci-dessous pour soumettre votre demande de projet. Notre équipe vous répondra dans les 24 heures.{% endif %}</p>
        </div>

        {# Formulaire #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-8">
            {{ form_start(form, {'attr': {'id': 'projectSubmissionForm'}}) }}
                {# Hidden field for features JSON #}
                <input type="hidden" name="fonctionnalites_json" id="fonctionnalitesJson" value="[]">
                
                {# Section 1: Informations générales #}
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">1</div>
                        Informations Générales
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Titre du projet #}
                        <div>
                            {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.nom) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        {# Type de projet #}
                        <div>
                            {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.type) }}
                            {{ form_errors(form.type) }}
                        </div>

                        {# Catégorie #}
                        <div>
                            {{ form_label(form.categorie, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.categorie) }}
                            {{ form_errors(form.categorie) }}
                        </div>
                    </div>
                </div>

                {# Section 2: Description du projet #}
                <div class="mb-8 pb-8 border-b dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">2</div>
                        Description du Projet
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Description #}
                        <div>
                            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.description) }}
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Minimum 100 caractères</p>
                            {{ form_errors(form.description) }}
                        </div>

                        {# Objectifs #}
                        <div>
                            {{ form_label(form.objectifs, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.objectifs) }}
                            {{ form_errors(form.objectifs) }}
                        </div>

                        {# Fonctionnalités clés #}
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Fonctionnalités Clés
                            </label>
                            <div id="featuresContainer" class="space-y-2">
                                {% if isEdit is defined and isEdit and projet is defined and projet.fonctionnalites is not empty %}
                                    {% for fonctionnalite in projet.fonctionnalites %}
                                        <div class="flex items-center gap-2">
                                            <input type="text" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 feature-input" value="{{ fonctionnalite }}" placeholder="Ex: Nouvelle fonctionnalité">
                                            <button type="button" onclick="removeFeature(this)" class="px-3 py-2 text-red-600 hover:text-red-700{% if loop.index <= 2 %} hidden{% endif %}">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="flex items-center gap-2">
                                        <input type="text" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 feature-input" placeholder="Ex: Système de paiement en ligne">
                                        <button type="button" onclick="removeFeature(this)" class="px-3 py-2 text-red-600 hover:text-red-700 hidden">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <input type="text" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 feature-input" placeholder="Ex: Gestion des utilisateurs">
                                        <button type="button" onclick="removeFeature(this)" class="px-3 py-2 text-red-600 hover:text-red-700 hidden">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                            <button type="button" onclick="addFeature()" class="mt-2 text-sm text-blue-600 hover:text-blue-700 font-medium">
                                <i class="fas fa-plus mr-1"></i> Ajouter une fonctionnalité
                            </button>
                        </div>
                    </div>
                </div>

                {# Section 3: Planning et budget #}
                <div class="mb-8 pb-8 border-b dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">3</div>
                        Planning et Budget
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {# Date de début souhaitée #}
                            <div>
                                {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                                {{ form_widget(form.dateDebut) }}
                                {{ form_errors(form.dateDebut) }}
                            </div>

                            {# Date de fin souhaitée #}
                            <div>
                                {{ form_label(form.dateFin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                                {{ form_widget(form.dateFin) }}
                                {{ form_errors(form.dateFin) }}
                            </div>
                        </div>

                        {# Budget estimé #}
                        <div>
                            {{ form_label(form.budget, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.budget) }}
                            {{ form_errors(form.budget) }}
                        </div>

                        {# Priorité #}
                        <div>
                            {{ form_label(form.priorite, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            <div class="flex items-center space-x-4">
                                {% for child in form.priorite %}
                                    <label class="flex items-center">
                                        {{ form_widget(child, {'attr': {'class': 'mr-2'}}) }}
                                        <span class="text-sm text-gray-700 dark:text-gray-300 {{ child.vars.value == 'urgent' ? 'text-red-600 dark:text-red-400 font-medium' : '' }}">
                                            {{ child.vars.label }}
                                        </span>
                                    </label>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.priorite) }}
                        </div>
                    </div>
                </div>

                {# Section 4: Documents et fichiers #}
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">4</div>
                        Documents et Fichiers
                    </h3>
                    
                    <div class="space-y-4 ml-11">
                        {# Notes additionnelles #}
                        <div>
                            {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            {{ form_widget(form.notes) }}
                            {{ form_errors(form.notes) }}
                        </div>

                        {# Fichier joint #}
                        <div>
                            {{ form_label(form.fichierJoint, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                            <div class="mt-1">
                                {{ form_widget(form.fichierJoint) }}
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                                    <i class="fas fa-info-circle mr-1"></i>
                                    Formats acceptés: PDF, DOC, DOCX, XLS, XLSX, PNG, JPG (Max 10 Mo)
                                </p>
                            </div>
                            {{ form_errors(form.fichierJoint) }}
                        </div>
                    </div>
                </div>

                {# Boutons d'action #}
                <div class="flex items-center justify-between pt-6 border-t dark:border-gray-700">
                    <a href="{{ path('client_dashboard') }}" class="px-6 py-3 border dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>Annuler
                    </a>
                    <button type="submit" class="px-8 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        <i class="fas {% if isEdit is defined and isEdit %}fa-save{% else %}fa-paper-plane{% endif %} mr-2"></i>
                        {% if isEdit is defined and isEdit %}Enregistrer les modifications{% else %}Soumettre le Projet{% endif %}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>

        {# JavaScript pour gérer les fonctionnalités dynamiques #}
        <script>
            // Ajouter une nouvelle fonctionnalité
            function addFeature() {
                const container = document.getElementById('featuresContainer');
                const newFeature = document.createElement('div');
                newFeature.className = 'flex items-center gap-2';
                newFeature.innerHTML = `
                    <input type="text" class="flex-1 px-4 py-2 border dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 feature-input" placeholder="Ex: Nouvelle fonctionnalité">
                    <button type="button" onclick="removeFeature(this)" class="px-3 py-2 text-red-600 hover:text-red-700">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                container.appendChild(newFeature);
                updateFeaturesJson();
            }

            // Supprimer une fonctionnalité
            function removeFeature(button) {
                button.parentElement.remove();
                updateFeaturesJson();
            }

            // Mettre à jour le champ JSON des fonctionnalités
            function updateFeaturesJson() {
                const inputs = document.querySelectorAll('.feature-input');
                const features = Array.from(inputs)
                    .map(input => input.value.trim())
                    .filter(value => value !== '');
                document.getElementById('fonctionnalitesJson').value = JSON.stringify(features);
            }

            // Mettre à jour le JSON avant la soumission
            document.getElementById('projectSubmissionForm').addEventListener('submit', function(e) {
                updateFeaturesJson();
                
                // Validation de la description (minimum 100 caractères)
                const description = document.querySelector('[name="projet[description]"]').value;
                if (description.length < 100) {
                    e.preventDefault();
                    alert('La description doit contenir au moins 100 caractères.');
                    return false;
                }
            });

            // Mettre à jour le JSON quand les inputs changent
            document.addEventListener('DOMContentLoaded', function() {
                document.querySelectorAll('.feature-input').forEach(input => {
                    input.addEventListener('blur', updateFeaturesJson);
                });
                
                // Initialize JSON with existing features on page load
                updateFeaturesJson();
            });
        </script>

        {# Aide #}
        <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle text-blue-600 dark:text-blue-400 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-2">Besoin d'aide ?</h4>
                    <p class="text-sm text-blue-800 dark:text-blue-200">
                        Notre équipe est là pour vous accompagner. N'hésitez pas à nous contacter si vous avez des questions sur le formulaire ou votre projet.
                    </p>
                    <a href="#" class="text-sm text-blue-600 dark:text-blue-400 font-medium mt-2 inline-block hover:underline">
                        Contacter le support <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
