{# templates/client/DashboardClient/index.html.twig #}
{% extends 'client/base_client.html.twig' %}

{% block title %}Vue d'ensemble - Client Dashboard{% endblock %}
{% block page_title %}Vue d'ensemble{% endblock %}

{% block body %}
<div class="p-6 space-y-6">
    {# Statistiques en cartes #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {# Total projets #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border-l-4 border-blue-500 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 font-medium">Total Projets</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-2">{{ stats.total }}</p>
                    <p class="text-xs text-blue-600 dark:text-blue-400 mt-2">
                        <i class="fas fa-folder"></i> Tous statuts
                    </p>
                </div>
                <div class="bg-blue-100 dark:bg-blue-900 p-4 rounded-full">
                    <i class="fas fa-folder-open text-blue-600 dark:text-blue-400 text-2xl"></i>
                </div>
            </div>
        </div>

        {# Projets en cours #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border-l-4 border-green-500 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 font-medium">En Cours</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-2">{{ stats.en_cours }}</p>
                    <p class="text-xs text-green-600 dark:text-green-400 mt-2">
                        <i class="fas fa-spinner"></i> Actifs
                    </p>
                </div>
                <div class="bg-green-100 dark:bg-green-900 p-4 rounded-full">
                    <i class="fas fa-tasks text-green-600 dark:text-green-400 text-2xl"></i>
                </div>
            </div>
        </div>

        {# Projets terminés #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border-l-4 border-purple-500 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 font-medium">Terminés</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-2">{{ stats.termine }}</p>
                    <p class="text-xs text-purple-600 dark:text-purple-400 mt-2">
                        <i class="fas fa-check-circle"></i> Complétés
                    </p>
                </div>
                <div class="bg-purple-100 dark:bg-purple-900 p-4 rounded-full">
                    <i class="fas fa-check-circle text-purple-600 dark:text-purple-400 text-2xl"></i>
                </div>
            </div>
        </div>

        {# En attente de validation #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border-l-4 border-orange-500 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 font-medium">En Attente</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-2">{{ stats.en_attente }}</p>
                    <p class="text-xs text-orange-600 dark:text-orange-400 mt-2">
                        <i class="fas fa-hourglass-half"></i> Validation requise
                    </p>
                </div>
                <div class="bg-orange-100 dark:bg-orange-900 p-4 rounded-full">
                    <i class="fas fa-clock text-orange-600 dark:text-orange-400 text-2xl"></i>
                </div>
            </div>
        </div>
    </div>

    {# Grille principale : Projets récents + Activités #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Projets récents (2/3) #}
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
                    <i class="fas fa-folder-open text-blue-600 mr-2"></i>
                    Projets Récents
                </h3>
                <a href="{{ path('client_projects') }}" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                    Voir tout <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>

            <div class="space-y-4">
                {% if recentProjects is empty %}
                    <div class="text-center py-8">
                        <i class="fas fa-folder-open text-gray-300 dark:text-gray-600 text-5xl mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">Aucun projet pour le moment</p>
                        <a href="{{ path('client_submit_project') }}" class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium">
                            <i class="fas fa-plus mr-2"></i>Créer votre premier projet
                        </a>
                    </div>
                {% else %}
                    {% for projet in recentProjects %}
                        <div class="border dark:border-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h4 class="font-semibold text-gray-900 dark:text-gray-100">{{ projet.nom }}</h4>
                                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{{ projet.description|slice(0, 80) }}{% if projet.description|length > 80 %}...{% endif %}</p>
                                    <div class="flex items-center mt-3 space-x-4">
                                        {% if projet.statut == 'EN_ATTENTE' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200">
                                                <i class="fas fa-circle text-xs mr-1"></i> En attente
                                            </span>
                                        {% elseif projet.statut == 'EN_COURS' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                                <i class="fas fa-circle text-xs mr-1"></i> En cours
                                            </span>
                                        {% elseif projet.statut == 'TERMINE' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                                                <i class="fas fa-circle text-xs mr-1"></i> Terminé
                                            </span>
                                        {% endif %}
                                        <span class="text-xs text-gray-500 dark:text-gray-400">
                                            <i class="fas fa-calendar mr-1"></i> {{ projet.dateCreation|date('d M Y') }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        {# Activités récentes (1/3) #}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-6">
                <i class="fas fa-history text-purple-600 mr-2"></i>
                Activités Récentes
            </h3>

            <div class="text-center py-8">
                <i class="fas fa-history text-gray-300 dark:text-gray-600 text-4xl mb-4"></i>
                <p class="text-gray-500 dark:text-gray-400 text-sm">Aucune activité récente</p>
            </div>
        </div>
    </div>

    {# Actions rapides #}
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-xl font-bold">Prêt à démarrer un nouveau projet ?</h3>
                <p class="text-blue-100 mt-2">Soumettez votre demande en quelques clics</p>
            </div>
            <a href="{{ path('client_submit_project') }}" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors shadow-md">
                <i class="fas fa-plus mr-2"></i>
                Nouveau Projet
            </a>
        </div>
    </div>
</div>
{% endblock %}
