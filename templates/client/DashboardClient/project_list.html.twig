{# templates/client/DashboardClient/project_list.html.twig #}
{% extends 'client/base_client.html.twig' %}

{% block title %}Mes Projets - Client Dashboard{% endblock %}
{% block page_title %}Mes Projets{% endblock %}

{% block body %}
<div class="p-6 space-y-6">
    {# Filtres et recherche #}
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
            {# Filtres par statut #}
            <div class="flex items-center space-x-3">
                <a href="{{ path('client_projects') }}" 
                   class="px-4 py-2 rounded-lg transition-colors {% if not currentFilter %}bg-blue-600 text-white{% else %}border dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700{% endif %}">
                    Tous
                </a>
                <a href="{{ path('client_projects', {status: 'en_attente'}) }}" 
                   class="px-4 py-2 rounded-lg transition-colors {% if currentFilter == 'en_attente' %}bg-orange-600 text-white{% else %}border dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700{% endif %}">
                    <i class="fas fa-clock mr-2"></i>En attente
                </a>
                <a href="{{ path('client_projects', {status: 'en_cours'}) }}" 
                   class="px-4 py-2 rounded-lg transition-colors {% if currentFilter == 'en_cours' %}bg-green-600 text-white{% else %}border dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700{% endif %}">
                    <i class="fas fa-spinner mr-2"></i>En cours
                </a>
                <a href="{{ path('client_projects', {status: 'termine'}) }}" 
                   class="px-4 py-2 rounded-lg transition-colors {% if currentFilter == 'termine' %}bg-purple-600 text-white{% else %}border dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700{% endif %}">
                    <i class="fas fa-check-circle mr-2"></i>Terminés
                </a>
            </div>
        </div>
    </div>

    {# Liste des projets en grille #}
    {% if projects is empty %}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-12 text-center">
            <i class="fas fa-folder-open text-gray-300 dark:text-gray-600 text-6xl mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">Aucun projet trouvé</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-6">
                {% if currentFilter %}
                    Aucun projet avec le statut sélectionné.
                {% else %}
                    Vous n'avez pas encore de projet.
                {% endif %}
            </p>
            <a href="{{ path('client_submit_project') }}" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <i class="fas fa-plus mr-2"></i>Créer votre premier projet
            </a>
        </div>
    {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for projet in projects %}
                {% set statusConfig = {
                    'EN_ATTENTE': {
                        'label': 'En attente',
                        'color': 'orange',
                        'gradient': 'from-orange-500 to-orange-600',
                        'badge': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200'
                    },
                    'EN_COURS': {
                        'label': 'En cours',
                        'color': 'green',
                        'gradient': 'from-green-500 to-green-600',
                        'badge': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                    },
                    'TERMINE': {
                        'label': 'Terminé',
                        'color': 'purple',
                        'gradient': 'from-purple-500 to-purple-600',
                        'badge': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
                    }
                } %}
                {% set config = statusConfig[projet.statut] ?? statusConfig['EN_ATTENTE'] %}
                
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow cursor-pointer group">
                    <div class="h-2 bg-gradient-to-r {{ config.gradient }}"></div>
                    <div class="p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1">
                                <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 transition-colors">
                                    {{ projet.nom }}
                                </h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Créé le {{ projet.dateCreation|date('d/m/Y') }}</p>
                            </div>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ config.badge }}">
                                {{ config.label }}
                            </span>
                        </div>

                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                            {{ projet.description }}
                        </p>

                        {# Informations #}
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-xs text-gray-600 dark:text-gray-400">
                                <i class="fas fa-calendar w-4 mr-2"></i>
                                <span>Créé le {{ projet.dateCreation|date('d M Y') }}</span>
                            </div>
                            {% if projet.budget %}
                                <div class="flex items-center text-xs text-gray-600 dark:text-gray-400">
                                    <i class="fas fa-euro-sign w-4 mr-2"></i>
                                    <span>Budget: {{ projet.budget }} €</span>
                                </div>
                            {% endif %}
                        </div>

                        {# Actions #}
                        <div class="flex items-center space-x-2 pt-4 border-t dark:border-gray-700">
                            <a href="{{ path('client_project_detail', {id: projet.id}) }}" class="flex-1 text-center px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm font-medium transition-colors">
                                Voir détails
                            </a>
                            <a href="{{ path('client_messages') }}" class="px-3 py-2 border dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                <i class="fas fa-comment"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
