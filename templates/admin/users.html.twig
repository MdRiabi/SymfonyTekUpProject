{# templates/admin/users.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'users.dashboard.title'|trans }}{% endblock %}

{% block body %}
    <main class="pt-16 overflow-y-auto">
        <div class="p-4 md:p-6 lg:p-8">
            <h1 class="text-2xl font-semibold text-gray-900 mb-8">{{ 'users.dashboard.title'|trans }}</h1>

            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
                {# Widget : Total Utilisateurs #}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
                                <i class="fas fa-users text-white"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">{{ 'users.dashboard.total_users'|trans }}</dt>
                                    <dd class="text-lg font-medium text-gray-900">{{ total_users_count }}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                {# Widget : Demandes en Attente (lien vers la page de gestion) #}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <a href="{{ path('admin_manage_requests') }}" class="block">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                                    <i class="fas fa-user-clock text-white"></i>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'users.dashboard.pending_requests'|trans }}</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ pending_requests_count }}</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                {# Widget : RÃ´les et Permissions #}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <a href="#" class="block">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                                    <i class="fas fa-shield-alt text-white"></i>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'users.dashboard.roles_permissions'|trans }}</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ total_roles_count }}</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                {# Widget : Ajout rapide #}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <a href="{{ path('admin_manage_users') }}" class="block">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                                    <i class="fas fa-user-plus text-white"></i>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'users.dashboard.view_all'|trans }}</dt>
                                        <dd class="text-sm font-medium text-gray-900">{{ 'users.dashboard.manage_directory'|trans }}</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}