{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs - Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h1 class="text-3xl font-bold text-gray-900 mb-8">Gestion des Utilisateurs & Rôles</h1>

            <div class="mb-6">
                <a href="{{ path('app_admin') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
