{# templates/admin/users/profile_sections/_session.html.twig #}
<div id="content-session" class="tab-content">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6">{{ 'profile.tabs.session'|trans }}</h2>
    
    <p class="text-gray-600 dark:text-gray-400 mb-6">
        Vous êtes connecté(e) à votre compte via les appareils suivants. Révoquez les sessions que vous ne reconnaissez pas ou qui proviennent d'appareils que vous ne contrôlez pas.
    </p>

    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Navigateur
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Dispositif/système d'exploitation
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Adresse IP
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Expiration
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Dernière connexion
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    {% for session in sessions %}
                        {% if not session.isRevoked %}
                        {% set isCurrentSession = session.sessionId == app.session.id %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {% set browser = session.getBrowser() %}
                                    {% if browser == 'Chrome' %}
                                        <i class="fab fa-chrome text-gray-400 text-xl mr-3"></i>
                                    {% elseif browser == 'Firefox' %}
                                        <i class="fab fa-firefox text-gray-400 text-xl mr-3"></i>
                                    {% elseif browser == 'Safari' %}
                                        <i class="fab fa-safari text-gray-400 text-xl mr-3"></i>
                                    {% elseif browser == 'Edge' %}
                                        <i class="fab fa-edge text-gray-400 text-xl mr-3"></i>
                                    {% elseif browser == 'Internet Explorer' %}
                                        <i class="fab fa-internet-explorer text-gray-400 text-xl mr-3"></i>
                                    {% else %}
                                        <i class="fas fa-globe text-gray-400 text-xl mr-3"></i>
                                    {% endif %}
                                    
                                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                                        {{ browser }}
                                        {% if isCurrentSession %}
                                            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                                Cette session
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    {% set platform = session.getPlatform() %}
                                    {% if platform == 'Windows' %}
                                        <i class="fab fa-windows mr-1"></i>
                                    {% elseif platform == 'macOS' %}
                                        <i class="fab fa-apple mr-1"></i>
                                    {% elseif platform == 'Linux' %}
                                        <i class="fab fa-linux mr-1"></i>
                                    {% elseif platform == 'Android' %}
                                        <i class="fab fa-android mr-1"></i>
                                    {% else %}
                                        <i class="fas fa-desktop mr-1"></i>
                                    {% endif %}
                                    {{ platform }}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    {{ session.ipAddress }}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    Active
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    {{ session.lastActiveAt|date('d/m/Y H:i') }}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                {% if not isCurrentSession %}
                                    <form action="{{ path('admin_user_revoke_session', {'id': session.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir révoquer cette session ?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('revoke_session_' ~ session.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300">
                                            Révoquer
                                        </button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500 dark:text-gray-400">
                                Aucune session active trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
