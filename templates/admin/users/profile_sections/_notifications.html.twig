{# templates/admin/users/profile_sections/_notifications.html.twig #}
<div id="content-notifications" class="tab-content">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6">Paramètres de notifications</h2>
    
    {{ form_start(notificationForm) }}
    
    <div class="space-y-8 divide-y divide-gray-200 dark:divide-gray-700">
        
        <!-- PARTICIPANT -->
        <div class="pt-4">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 uppercase text-sm tracking-wider">Participant</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Notifications pour toute activité sur les lots de travaux vous concernant (assigné, responsable ou observateur).
            </p>
            <div class="mt-4 space-y-4">
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyMentioned) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyMentioned) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyWatcher) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyWatcher) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyAssigned) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyAssigned) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyResponsible) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyResponsible) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyShared) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyShared) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- ALERTES DE DATE -->
        <div class="pt-8">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 uppercase text-sm tracking-wider">Alertes de date</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Notifications automatiques lorsque des dates importantes approchent pour les lots de travaux ouverts vous concernant (assigné, responsable ou observateur).
            </p>
            <div class="mt-4 space-y-4">
                <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-6 items-center">
                    <div class="sm:col-span-2 flex items-center">
                        {{ form_widget(notificationForm.notifyStartDate) }}
                        {{ form_label(notificationForm.notifyStartDate) }}
                    </div>
                    <div class="sm:col-span-2">
                        {{ form_widget(notificationForm.startDateDelay) }}
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-6 items-center">
                    <div class="sm:col-span-2 flex items-center">
                        {{ form_widget(notificationForm.notifyEndDate) }}
                        {{ form_label(notificationForm.notifyEndDate) }}
                    </div>
                    <div class="sm:col-span-2">
                        {{ form_widget(notificationForm.endDateDelay) }}
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-6 items-center">
                    <div class="sm:col-span-2 flex items-center">
                        {{ form_widget(notificationForm.notifyOverdue) }}
                        {{ form_label(notificationForm.notifyOverdue) }}
                    </div>
                    <div class="sm:col-span-2">
                        {{ form_widget(notificationForm.overdueFrequency) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- NON PARTICIPANT -->
        <div class="pt-8">
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 uppercase text-sm tracking-wider">Non participant</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Notifications additionnelles lors d'activités sur tous les projets.
            </p>
            <div class="mt-4 space-y-4">
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyNewWorkPackage) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyNewWorkPackage) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyStatusChanges) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyStatusChanges) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyDateChanges) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyDateChanges) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyPriorityChanges) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyPriorityChanges) }}
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex h-5 items-center">
                        {{ form_widget(notificationForm.notifyNewComments) }}
                    </div>
                    <div class="ml-3 text-sm">
                        {{ form_label(notificationForm.notifyNewComments) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="pt-5">
        <div class="flex justify-start">
            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900">
                Enregistrer
            </button>
        </div>
    </div>

    {{ form_end(notificationForm) }}
</div>
