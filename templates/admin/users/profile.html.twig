{# templates/admin/users/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Paramètres{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tab-active {
            border-bottom: 3px solid #2563eb;
            color: #2563eb;
        }
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="pt-16 overflow-y-auto bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Paramètres du Profil</h1>
                <p class="mt-2 text-sm text-gray-600">Gérez vos informations personnelles et vos préférences</p>
            </div>

            <!-- Horizontal Tab Navigation -->
            <div class="bg-white rounded-lg shadow-sm mb-6">
                <div class="border-b border-gray-200">
                    <nav class="flex overflow-x-auto" aria-label="Tabs">
                        <button onclick="switchTab('profil')" id="tab-profil" class="tab-active whitespace-nowrap py-4 px-6 border-b-2 font-medium text-sm transition-colors hover:text-blue-600 focus:outline-none">
                            <i class="fas fa-user mr-2"></i>Profil
                        </button>
                        <button onclick="switchTab('langue')" id="tab-langue" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-globe mr-2"></i>Langue et région
                        </button>
                        <button onclick="switchTab('interface')" id="tab-interface" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-desktop mr-2"></i>Interface
                        </button>
                        <button onclick="switchTab('2fa')" id="tab-2fa" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-shield-alt mr-2"></i>Authentification à deux facteurs
                        </button>
                        <button onclick="switchTab('tokens')" id="tab-tokens" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-key mr-2"></i>Jetons d'accès
                        </button>
                        <button onclick="switchTab('session')" id="tab-session" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-clock mr-2"></i>Gestion de session
                        </button>
                        <button onclick="switchTab('notifications')" id="tab-notifications" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-bell mr-2"></i>Paramètres de notification
                        </button>
                        <button onclick="switchTab('email')" id="tab-email" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-envelope mr-2"></i>Rappels par e-mail
                        </button>
                        <button onclick="switchTab('avatar')" id="tab-avatar" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-image mr-2"></i>Avatar
                        </button>
                    </nav>
                </div>
            </div>

            <!-- Tab Contents -->
            <div class="bg-white rounded-lg shadow-sm p-8">
                <!-- Profil Tab -->
                <div id="content-profil" class="tab-content active">
                    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Informations du Profil</h2>
                    
                    <form action="{{ path('admin_profile_update') }}" method="POST" class="max-w-2xl">
                        <div class="space-y-6">
                            <!-- Nom d'utilisateur (read-only) -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Nom d'utilisateur
                                </label>
                                <input type="text" value="{{ app.user.email }}" readonly
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 bg-gray-50 text-gray-500 cursor-not-allowed">
                                <p class="mt-1 text-xs text-gray-500">Le nom d'utilisateur ne peut pas être modifié</p>
                            </div>

                            <!-- Prénom -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Prénom <span class="text-red-500">*</span>
                                </label>
                                <input type="text" name="prenom" value="{{ app.user.prenom }}" required
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>

                            <!-- Nom de famille -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Nom de famille <span class="text-red-500">*</span>
                                </label>
                                <input type="text" name="nom" value="{{ app.user.nom }}" required
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>

                            <!-- E-mail -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    E-mail <span class="text-red-500">*</span>
                                </label>
                                <input type="email" name="email" value="{{ app.user.email }}" required
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>

                            <!-- Adresse -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Adresse
                                </label>
                                <input type="text" name="adresse" value="{{ app.user.adresse }}"
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>

                            <!-- Titre du poste -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    Titre du poste
                                </label>
                                <input type="text" name="titrePoste" value="{{ app.user.titrePoste }}"
                                       class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>

                            <!-- Submit Button -->
                            <div class="pt-4">
                                <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                                    <i class="fas fa-check mr-2"></i>
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script>
        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all tabs
            document.querySelectorAll('nav button').forEach(tab => {
                tab.classList.remove('tab-active', 'text-blue-600');
                tab.classList.add('text-gray-500', 'border-transparent');
            });

            // Show selected tab content
            document.getElementById('content-' + tabName).classList.add('active');

            // Add active class to selected tab
            const activeTab = document.getElementById('tab-' + tabName);
            activeTab.classList.add('tab-active', 'text-blue-600');
            activeTab.classList.remove('text-gray-500', 'border-transparent');
        }
    </script>
{% endblock %}
