{# templates/admin/users/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title'|trans }}{% endblock %}

{% block body %}
    <style>
        .tab-active {
            border-bottom: 3px solid #2563eb !important;
            color: #2563eb !important;
        }
        .tab-content {
            display: none !important;
        }
        .tab-content.active {
            display: block !important;
        }
    </style>

    <main class="pt-16 overflow-y-auto bg-gray-50 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">{{ 'profile.title'|trans }}</h1>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{{ 'profile.subtitle'|trans }}</p>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="mb-6 bg-green-50 dark:bg-green-900/20 border-l-4 border-green-400 p-4 rounded-lg" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700 dark:text-green-300">{{ message|trans }}</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <button type="button" onclick="this.parentElement.parentElement.parentElement.remove()" class="inline-flex text-green-400 hover:text-green-600 focus:outline-none">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="mb-6 bg-red-50 dark:bg-red-900/20 border-l-4 border-red-400 p-4 rounded-lg" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700 dark:text-red-300">{{ message|trans }}</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <button type="button" onclick="this.parentElement.parentElement.parentElement.remove()" class="inline-flex text-red-400 hover:text-red-600 focus:outline-none">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- Horizontal Tab Navigation -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm mb-6">
                <div class="border-b border-gray-200 dark:border-gray-700">
                    <nav class="flex overflow-x-auto" aria-label="Tabs">
                        <button onclick="switchTab('profil')" id="tab-profil" class="tab-active whitespace-nowrap py-4 px-6 border-b-2 font-medium text-sm transition-colors hover:text-blue-600 focus:outline-none">
                            <i class="fas fa-user mr-2"></i>{{ 'profile.tabs.profile'|trans }}
                        </button>
                        <button onclick="switchTab('langue')" id="tab-langue" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors focus:outline-none">
                            <i class="fas fa-globe mr-2"></i>{{ 'profile.tabs.language'|trans }}
                        </button>
                        <button onclick="switchTab('interface')" id="tab-interface" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-desktop mr-2"></i>{{ 'profile.tabs.interface'|trans }}
                        </button>
                        <button onclick="switchTab('mot_de_passe')" id="tab-mot_de_passe" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-lock mr-2"></i>{{ 'profile.tabs.password'|trans }}
                        </button>

                        <button onclick="switchTab('session')" id="tab-session" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-clock mr-2"></i>{{ 'profile.tabs.session'|trans }}
                        </button>
                        <button onclick="switchTab('notifications')" id="tab-notifications" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-bell mr-2"></i>{{ 'profile.tabs.notifications'|trans }}
                        </button>

                        <button onclick="switchTab('avatar')" id="tab-avatar" class="whitespace-nowrap py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-blue-600 transition-colors focus:outline-none">
                            <i class="fas fa-image mr-2"></i>{{ 'profile.tabs.avatar'|trans }}
                        </button>
                    </nav>
                </div>
            </div>

            <!-- Tab Contents -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-8">
                {# Include all section partials #}
                {% include 'admin/users/profile_sections/_profil.html.twig' %}
                {% include 'admin/users/profile_sections/_langue.html.twig' %}
                {% include 'admin/users/profile_sections/_interface.html.twig' %}
                {% include 'admin/users/profile_sections/_mot_de_passe.html.twig' %}
                {% include 'admin/users/profile_sections/_session.html.twig' %}
                {% include 'admin/users/profile_sections/_notifications.html.twig' %}
                {% include 'admin/users/profile_sections/_avatar.html.twig' %}
            </div>
        </div>
    </main>

    <script>
        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all tabs
            document.querySelectorAll('nav button').forEach(tab => {
                tab.classList.remove('tab-active', 'text-blue-600');
                tab.classList.add('text-gray-500', 'border-transparent');
            });

            // Show selected tab content
            document.getElementById('content-' + tabName).classList.add('active');

            // Add active class to selected tab
            const activeTab = document.getElementById('tab-' + tabName);
            activeTab.classList.add('tab-active', 'text-blue-600');
            activeTab.classList.remove('text-gray-500', 'border-transparent');
        }

        // Initialize: Hide all tabs except the active one on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Force hide all tab contents first
            document.querySelectorAll('.tab-content').forEach(content => {
                content.style.display = 'none';
            });
            
            // Then show only the active one
            const activeContent = document.querySelector('.tab-content.active');
            if (activeContent) {
                activeContent.style.display = 'block';
            }
        });

        // Auto-dismiss flash messages after 5 seconds
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('[role="alert"]');
            flashMessages.forEach(function(message) {
                message.style.transition = 'opacity 0.5s';
                message.style.opacity = '0';
                setTimeout(function() {
                    message.remove();
                }, 500);
            });
        }, 5000);
    </script>
{% endblock %}
