{% extends 'base.html.twig' %}

{% block title %}Project Charter - Décision Go/No-Go{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-20">
    <div class="container mx-auto px-4 py-8 max-w-7xl">
        {# Header du Projet #}
        <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4 border-b border-gray-200 dark:border-gray-800 pb-6">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <a href="{{ path('admin_dashboard') }}" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">{{ projet.nom }}</h1>
                    <span class="px-2.5 py-0.5 rounded-full text-xs font-semibold uppercase tracking-wide border
                        {% if projet.statut == 'EN_ATTENTE' %}bg-yellow-50 text-yellow-700 border-yellow-200 dark:bg-yellow-900/20 dark:text-yellow-400 dark:border-yellow-800
                        {% elseif projet.statut == 'EN_COURS' %}bg-blue-50 text-blue-700 border-blue-200 dark:bg-blue-900/20 dark:text-blue-400 dark:border-blue-800
                        {% elseif projet.statut == 'TERMINE' %}bg-green-50 text-green-700 border-green-200 dark:bg-green-900/20 dark:text-green-400 dark:border-green-800
                        {% else %}bg-gray-50 text-gray-700 border-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-700{% endif %}">
                        {{ projet.statut }}
                    </span>
                </div>
                <div class="flex items-center space-x-6 text-sm text-gray-500 dark:text-gray-400">
                    <span class="flex items-center"><i class="fas fa-user-circle mr-2"></i> {{ projet.client.nom }} {{ projet.client.prenom }}</span>
                    <span class="flex items-center"><i class="far fa-calendar-alt mr-2"></i> Créé le {{ projet.dateCreation|date('d/m/Y') }}</span>
                </div>
            </div>
        </div>

        {# Stepper / Progress Bar #}
        <div class="mb-10">
            <div class="flex justify-between w-full max-w-3xl mx-auto relative">
                {# Connecting Line #}
                <div class="absolute top-4 left-0 w-full h-0.5 bg-gray-200 dark:bg-gray-800 -z-10"></div>
                
                {# Step 1: Business Case #}
                <a href="{{ path('admin_project_charter_step1', {'id': projet.id}) }}" class="flex flex-col items-center relative group cursor-pointer">
                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-green-500 text-white font-bold text-sm z-10 ring-4 ring-gray-50 dark:ring-gray-900 transition-transform transform group-hover:scale-110">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="mt-2 text-xs font-medium text-green-600 dark:text-green-400 uppercase tracking-wide">Business Case</div>
                </a>

                {# Step 2: Scope #}
                <a href="{{ path('admin_project_charter_step2', {'id': projet.id}) }}" class="flex flex-col items-center relative group cursor-pointer">
                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-green-500 text-white font-bold text-sm z-10 ring-4 ring-gray-50 dark:ring-gray-900 transition-transform transform group-hover:scale-110">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="mt-2 text-xs font-medium text-green-600 dark:text-green-400 uppercase tracking-wide">Périmètre</div>
                </a>

                {# Step 3: Resources #}
                <a href="{{ path('admin_project_charter_step3', {'id': projet.id}) }}" class="flex flex-col items-center relative group cursor-pointer">
                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-green-500 text-white font-bold text-sm z-10 ring-4 ring-gray-50 dark:ring-gray-900 transition-transform transform group-hover:scale-110">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="mt-2 text-xs font-medium text-green-600 dark:text-green-400 uppercase tracking-wide">Ressources</div>
                </a>

                {# Step 4: Decision #}
                <div class="flex flex-col items-center relative group">
                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-600 text-white font-bold text-sm z-10 ring-4 ring-gray-50 dark:ring-gray-900 transition-transform transform group-hover:scale-110">
                        4
                    </div>
                    <div class="mt-2 text-xs font-bold text-blue-600 dark:text-blue-400 uppercase tracking-wide">Décision</div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
            {# Colonne Gauche : Synthèse (Sticky) #}
            <div class="lg:col-span-8 space-y-8">
                
                {# Business Case Summary #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800 flex justify-between items-center">
                        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider">
                            <i class="fas fa-chart-line mr-2 text-blue-500"></i> Business Case
                        </h3>
                        <a href="{{ path('admin_project_charter_step1', {'id': projet.id}) }}" class="text-xs text-blue-600 hover:text-blue-800 dark:text-blue-400">Modifier</a>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">Problème</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300">{{ projet.businessCaseData.problemStatement|default('-') }}</p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">Solution</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300">{{ projet.businessCaseData.proposedSolution|default('-') }}</p>
                        </div>
                    </div>
                </div>

                {# Scope Summary #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800 flex justify-between items-center">
                        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider">
                            <i class="fas fa-bullseye mr-2 text-green-500"></i> Périmètre
                        </h3>
                        <a href="{{ path('admin_project_charter_step2', {'id': projet.id}) }}" class="text-xs text-blue-600 hover:text-blue-800 dark:text-blue-400">Modifier</a>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">In-Scope</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-line">{{ projet.scopeDefinitionData.scopeIn|default('-') }}</p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">MVP Features</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-line">{{ projet.scopeDefinitionData.mvpFeatures|default('-') }}</p>
                        </div>
                    </div>
                </div>

                {# Resources Summary #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800 flex justify-between items-center">
                        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider">
                            <i class="fas fa-users-cog mr-2 text-purple-500"></i> Ressources
                        </h3>
                        <a href="{{ path('admin_project_charter_step3', {'id': projet.id}) }}" class="text-xs text-blue-600 hover:text-blue-800 dark:text-blue-400">Modifier</a>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="md:col-span-3">
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">Équipe</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-line">{{ projet.resourcePlanningData.teamMembers|default('-') }}</p>
                        </div>
                        <div>
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">Budget Estimé</label>
                            <p class="text-lg font-bold text-gray-900 dark:text-white">{{ projet.resourcePlanningData.budgetEstimate|default(0)|format_currency('EUR') }}</p>
                        </div>
                        <div class="md:col-span-2">
                            <label class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1 block">Planning</label>
                            <p class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-line">{{ projet.resourcePlanningData.timelineEstimate|default('-') }}</p>
                        </div>
                    </div>
                </div>

            </div>

            {# Colonne Droite : Action Finale #}
            <div class="lg:col-span-4 sticky top-24">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-800">
                        <h2 class="text-lg font-bold text-gray-900 dark:text-white">Décision Finale</h2>
                        <p class="text-xs text-gray-500 mt-1">Validez le lancement du projet.</p>
                    </div>

                    <div class="p-6">
                        {{ form_start(form, {'action': path('admin_project_charter_finalize', {'id': projet.id, 'action': 'go'})}) }}
                            <div class="mb-6">
                                {{ form_label(form.remarks, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2'}}) }}
                                {{ form_widget(form.remarks, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 dark:text-white placeholder-gray-400 text-sm', 'rows': '4'}}) }}
                                {{ form_errors(form.remarks) }}
                            </div>


                            <div class="space-y-3">
                                {# Bouton GO - Vert #}
                                <button type="submit" 
                                    formaction="{{ path('admin_project_charter_finalize', {'id': projet.id, 'action': 'go'}) }}"
                                    class="w-full py-4 bg-green-600 hover:bg-green-700 text-white rounded-lg font-bold text-base">
                                    <i class="fas fa-rocket mr-2"></i> Lancer le Projet (GO)
                                </button>
                                
                                {# Bouton RÉVISION - Orange #}
                                <button type="submit" 
                                    formaction="{{ path('admin_project_charter_finalize', {'id': projet.id, 'action': 'revision'}) }}"
                                    class="w-full py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-lg font-bold text-base">
                                    <i class="fas fa-edit mr-2"></i> Demander Révision
                                </button>
                                
                                {# Bouton NO-GO - Rouge #}
                                <button type="submit" 
                                    formaction="{{ path('admin_project_charter_finalize', {'id': projet.id, 'action': 'no-go'}) }}"
                                    class="w-full py-4 bg-red-600 hover:bg-red-700 text-white rounded-lg font-bold text-base">
                                    <i class="fas fa-ban mr-2"></i> Rejeter le Projet (NO-GO)
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
