{% extends 'base.html.twig' %}

{% block title %}Assigner & Planifier - {{ projet.nom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Assigner & Planifier</h1>
            <p class="text-gray-600 text-sm">Projet : {{ projet.nom }}</p>
        </div>
        <a href="{{ path('admin_project_configuration_dashboard', {'id': projet.id}) }}" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-arrow-left mr-2"></i>Retour
        </a>
    </div>

    {% if phases is empty %}
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
            <i class="fas fa-exclamation-triangle text-yellow-600 text-3xl mb-3"></i>
            <p class="text-yellow-800 font-medium">Aucune phase d√©finie</p>
            <p class="text-yellow-600 text-sm mt-2">Veuillez d'abord cr√©er des phases et des t√¢ches.</p>
            <a href="{{ path('admin_project_configuration_phases', {'id': projet.id}) }}" class="inline-block mt-4 px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700">
                Cr√©er des phases
            </a>
        </div>
    {% else %}
        <form method="post" class="space-y-6">
            {% for phase in phases %}
                <div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
                    <div class="bg-gradient-to-r from-purple-50 to-purple-100 px-6 py-4 border-b border-purple-200">
                        <div class="flex justify-between items-center">
                            <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                                <i class="fas fa-layer-group text-purple-600"></i>
                                {{ phase.nom }}
                            </h3>
                            <span class="text-xs text-gray-500">
                                {{ phase.taches|length }} t√¢che(s)
                                {% if phase.taches|length > 0 %}
                                    - 
                                    {% set assignedInPhase = 0 %}
                                    {% for t in phase.taches %}
                                        {% if t.assigne %}
                                            {% set assignedInPhase = assignedInPhase + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    {{ assignedInPhase }} assign√©e(s)
                                {% endif %}
                            </span>
                        </div>
                    </div>

                    {% if phase.taches is empty %}
                        <div class="p-6 text-center text-gray-400 text-sm italic">
                            Aucune t√¢che dans cette phase.
                            <a href="{{ path('admin_project_configuration_tasks', {'id': projet.id}) }}" class="text-purple-600 hover:underline ml-2">Ajouter une t√¢che</a>
                        </div>
                    {% else %}
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-gray-50 border-b border-gray-200">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">T√¢che</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assign√© √†</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priorit√©</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deadline</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Heures estim√©es</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    {% for tache in phase.taches %}
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-4 py-3">
                                                <div class="flex items-center gap-2">
                                                    <i class="fas fa-tasks text-gray-400 text-sm"></i>
                                                    <span class="font-medium text-gray-800">{{ tache.nom }}</span>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <select name="assignments[{{ tache.id }}][assigne_id]" class="w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-sm">
                                                    <option value="">Non assign√©</option>
                                                    {% for user in users %}
                                                        <option value="{{ user.id }}" {% if tache.assigne and tache.assigne.id == user.id %}selected{% endif %}>
                                                            {{ user.nom }} {{ user.prenom }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </td>
                                            <td class="px-4 py-3">
                                                <select name="assignments[{{ tache.id }}][priorite]" class="w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-sm">
                                                    <option value="LOW" {% if tache.priorite == 'LOW' %}selected{% endif %}>üü¢ Basse</option>
                                                    <option value="MEDIUM" {% if tache.priorite == 'MEDIUM' %}selected{% endif %}>üü° Moyenne</option>
                                                    <option value="HIGH" {% if tache.priorite == 'HIGH' %}selected{% endif %}>üî¥ Haute</option>
                                                </select>
                                            </td>
                                            <td class="px-4 py-3">
                                                <input type="date" 
                                                       name="assignments[{{ tache.id }}][deadline]" 
                                                       value="{{ tache.deadline ? tache.deadline|date('Y-m-d') : '' }}"
                                                       class="w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-sm">
                                            </td>
                                            <td class="px-4 py-3">
                                                <input type="number" 
                                                       name="assignments[{{ tache.id }}][estimated_hours]" 
                                                       value="{{ tache.estimatedHours }}"
                                                       placeholder="0"
                                                       min="0"
                                                       class="w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-sm">
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}

            {# Summary Section #}
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg shadow-lg border-2 border-indigo-200 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-6 py-4">
                    <h3 class="text-xl font-bold text-white flex items-center gap-3">
                        <i class="fas fa-clipboard-check"></i>
                        R√©capitulatif des assignations
                    </h3>
                </div>

                <div class="p-6 space-y-6">
                    {# Statistics Cards #}
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        {% set totalTasks = 0 %}
                        {% set assignedTasks = 0 %}
                        {% set totalHours = 0 %}
                        {% set highPriorityCount = 0 %}
                        
                        {% for phase in phases %}
                            {% for tache in phase.taches %}
                                {% set totalTasks = totalTasks + 1 %}
                                {% if tache.assigne %}
                                    {% set assignedTasks = assignedTasks + 1 %}
                                {% endif %}
                                {% if tache.estimatedHours %}
                                    {% set totalHours = totalHours + tache.estimatedHours %}
                                {% endif %}
                                {% if tache.priorite == 'HIGH' %}
                                    {% set highPriorityCount = highPriorityCount + 1 %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}

                        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
                            <div class="text-3xl font-bold text-indigo-600">{{ totalTasks }}</div>
                            <div class="text-sm text-gray-600 mt-1">T√¢ches totales</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
                            <div class="text-3xl font-bold text-green-600">{{ assignedTasks }}</div>
                            <div class="text-sm text-gray-600 mt-1">T√¢ches assign√©es</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
                            <div class="text-3xl font-bold text-orange-600">{{ totalHours }}h</div>
                            <div class="text-sm text-gray-600 mt-1">Heures estim√©es</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
                            <div class="text-3xl font-bold text-red-600">{{ highPriorityCount }}</div>
                            <div class="text-sm text-gray-600 mt-1">Priorit√© haute</div>
                        </div>
                    </div>

                    {# Progress Bar #}
                    {% set progressPercent = totalTasks > 0 ? (assignedTasks / totalTasks * 100)|round : 0 %}
                    <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-gray-700">Progression des assignations</span>
                            <span class="text-sm font-bold text-indigo-600">{{ progressPercent }}%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                            <div class="bg-gradient-to-r from-indigo-500 to-blue-500 h-3 rounded-full transition-all duration-500" style="width: {{ progressPercent }}%"></div>
                        </div>
                    </div>

                    {# Assigned Tasks by Member - Simplified approach #}
                    {% set uniqueMembers = [] %}
                    {% for phase in phases %}
                        {% for tache in phase.taches %}
                            {% if tache.assigne %}
                                {% set found = false %}
                                {% for m in uniqueMembers %}
                                    {% if m.id == tache.assigne.id %}
                                        {% set found = true %}
                                    {% endif %}
                                {% endfor %}
                                {% if not found %}
                                    {% set uniqueMembers = uniqueMembers|merge([tache.assigne]) %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}

                    {% if uniqueMembers|length > 0 %}
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                            <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-4 py-3 border-b border-green-200">
                                <h4 class="font-semibold text-gray-800 flex items-center gap-2">
                                    <i class="fas fa-users text-green-600"></i>
                                    T√¢ches assign√©es par membre ({{ assignedTasks }})
                                </h4>
                            </div>
                            <div class="divide-y divide-gray-100">
                                {% for member in uniqueMembers %}
                                    {# Find all tasks for this member #}
                                    {% set memberTasks = [] %}
                                    {% set memberHours = 0 %}
                                    {% for phase in phases %}
                                        {% for tache in phase.taches %}
                                            {% if tache.assigne and tache.assigne.id == member.id %}
                                                {% set memberTasks = memberTasks|merge([tache]) %}
                                                {% if tache.estimatedHours %}
                                                    {% set memberHours = memberHours + tache.estimatedHours %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                    
                                    <div class="p-4 hover:bg-gray-50 transition-colors">
                                        <div class="flex items-start justify-between mb-3">
                                            <div class="flex items-center gap-3">
                                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white font-bold text-lg shadow-md">
                                                    {{ member.nom|first }}{{ member.prenom|first }}
                                                </div>
                                                <div>
                                                    <div class="font-semibold text-gray-800">{{ member.nom }} {{ member.prenom }}</div>
                                                    <div class="text-sm text-gray-500">{{ memberTasks|length }} t√¢che(s) ‚Ä¢ {{ memberHours }}h estim√©es</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="ml-15 space-y-2">
                                            {% for tache in memberTasks %}
                                                <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3 border border-gray-200">
                                                    <div class="flex items-center gap-3 flex-1">
                                                        <i class="fas fa-tasks text-gray-400"></i>
                                                        <span class="font-medium text-gray-700">{{ tache.nom }}</span>
                                                        <span class="text-xs text-gray-400">({{ tache.phase.nom }})</span>
                                                    </div>
                                                    <div class="flex items-center gap-3">
                                                        {% if tache.priorite == 'HIGH' %}
                                                            <span class="px-2 py-1 bg-red-100 text-red-700 rounded text-xs font-medium">üî¥ Haute</span>
                                                        {% elseif tache.priorite == 'MEDIUM' %}
                                                            <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded text-xs font-medium">üü° Moyenne</span>
                                                        {% else %}
                                                            <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">üü¢ Basse</span>
                                                        {% endif %}
                                                        
                                                        {% if tache.deadline %}
                                                            {% set daysUntil = (tache.deadline.timestamp - "now"|date('U')) / 86400 %}
                                                            <span class="text-xs {% if daysUntil < 3 %}text-red-600 font-bold{% else %}text-gray-600{% endif %}">
                                                                {% if daysUntil < 3 %}<i class="fas fa-exclamation-triangle"></i> {% endif %}
                                                                üìÖ {{ tache.deadline|date('d/m/Y') }}
                                                            </span>
                                                        {% endif %}
                                                        
                                                        {% if tache.estimatedHours %}
                                                            <span class="text-xs text-gray-600">‚è±Ô∏è {{ tache.estimatedHours }}h</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Unassigned Tasks #}
                    {% set unassignedTasks = [] %}
                    {% for phase in phases %}
                        {% for tache in phase.taches %}
                            {% if not tache.assigne %}
                                {% set unassignedTasks = unassignedTasks|merge([tache]) %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}

                    {% if unassignedTasks|length > 0 %}
                        <div class="bg-white rounded-lg shadow-sm border-2 border-orange-200 overflow-hidden">
                            <div class="bg-gradient-to-r from-orange-50 to-amber-50 px-4 py-3 border-b border-orange-200">
                                <h4 class="font-semibold text-gray-800 flex items-center gap-2">
                                    <i class="fas fa-exclamation-circle text-orange-600"></i>
                                    T√¢ches non assign√©es ({{ unassignedTasks|length }})
                                </h4>
                            </div>
                            <div class="p-4">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                    {% for tache in unassignedTasks %}
                                        <div class="flex items-center gap-2 bg-orange-50 rounded-lg p-3 border border-orange-200">
                                            <i class="fas fa-circle text-orange-400 text-xs"></i>
                                            <span class="font-medium text-gray-700">{{ tache.nom }}</span>
                                            <span class="text-xs text-gray-500">({{ tache.phase.nom }})</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Save Button #}
            <div class="flex justify-between items-center bg-white rounded-lg shadow-sm border border-gray-100 p-6">
                <div class="text-sm text-gray-600">
                    <i class="fas fa-info-circle text-blue-500 mr-2"></i>
                    {% if unassignedTasks|length > 0 %}
                        <span class="text-orange-600 font-medium">{{ unassignedTasks|length }} t√¢che(s) non assign√©e(s).</span>
                        Les modifications seront appliqu√©es uniquement aux t√¢ches assign√©es.
                    {% else %}
                        <span class="text-green-600 font-medium">‚úì Toutes les t√¢ches sont assign√©es !</span>
                        Cliquez sur "Enregistrer" pour valider.
                    {% endif %}
                </div>
                <button 
                type="submit"
                     style="background: #10b981;
                    color: white;
                    padding: 12px 24px;
                    border-radius: 8px;
                    font-weight: 600;
                    font-size: 18px;
                    border: 3px solid ;
                    cursor: pointer;
                    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);">
                    <i class="fas fa-save mr-2"></i>Enregistrer toutes les assignations
                </button>
            </div>
        </form>
    {% endif %}
</div>
{% endblock %}
