{% extends 'base.html.twig' %}

{% block title %}Gérer les Phases - {{ projet.nom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Gérer les Phases</h1>
            <p class="text-gray-600 text-sm">Projet : {{ projet.nom }}</p>
        </div>
        <a href="{{ path('admin_project_configuration_dashboard', {'id': projet.id}) }}" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-arrow-left mr-2"></i>Retour
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {# Form Section #}
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 sticky top-6">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Nouvelle Phase</h2>
                <form method="post">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nom de la phase</label>
                        <input type="text" name="nom" required class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea name="description" rows="3" class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    </div>
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Date début</label>
                            <input type="date" name="dateDebut" class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Date fin</label>
                            <input type="date" name="dateFin" class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        </div>
                    </div>
                    <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Ajouter la Phase
                    </button>
                </form>
            </div>
        </div>

        {# List Section #}
        <div class="lg:col-span-2 space-y-4">
            {% for phase in phases %}
                <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 flex justify-between items-start group">
                    <div>
                        <h3 class="font-bold text-gray-800 text-lg">{{ phase.nom }}</h3>
                        <p class="text-gray-600 text-sm mb-2">{{ phase.description }}</p>
                        <div class="flex items-center gap-4 text-xs text-gray-500">
                            {% if phase.dateDebut %}
                                <span><i class="far fa-calendar-alt mr-1"></i> {{ phase.dateDebut|date('d/m/Y') }}</span>
                            {% endif %}
                            {% if phase.dateFin %}
                                <span><i class="fas fa-arrow-right mx-1"></i> {{ phase.dateFin|date('d/m/Y') }}</span>
                            {% endif %}
                            <span class="bg-gray-100 px-2 py-0.5 rounded">{{ phase.taches|length }} tâches</span>
                        </div>
                    </div>
                    <form action="{{ path('admin_project_configuration_phase_delete', {'id': projet.id, 'phaseId': phase.id}) }}" method="post" onsubmit="return confirm('Supprimer cette phase ?');">
                        <button type="submit" class="text-red-400 hover:text-red-600 p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            {% else %}
                <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-200">
                    <p class="text-gray-500">Aucune phase définie pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
