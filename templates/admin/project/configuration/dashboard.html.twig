{% extends 'base.html.twig' %}

{% block title %}Configuration du Projet - {{ projet.nom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6 border border-gray-100">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Configuration du Projet</h1>
                <p class="text-gray-600">D√©finissez les phases et planifiez les t√¢ches pour <strong>{{ projet.nom }}</strong>.</p>
            </div>
            <a href="{{ path('admin_project_details', {'id': projet.id}) }}" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i>Retour aux d√©tails
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {# Phases Card #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800">Phases</h2>
                </div>
                <span class="bg-gray-100 text-gray-600 py-1 px-3 rounded-full text-xs font-medium">
                    {{ projet.phases|length }} phases
                </span>
            </div>
            <p class="text-gray-600 mb-6">D√©coupez votre projet en √©tapes logiques (ex: Conception, D√©veloppement, Recette).</p>
            <a href="{{ path('admin_project_configuration_phases', {'id': projet.id}) }}" class="block w-full text-center py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                G√©rer les Phases
            </a>
        </div>

        {# Tasks Card #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800">T√¢ches</h2>
                </div>
                <span class="bg-gray-100 text-gray-600 py-1 px-3 rounded-full text-xs font-medium">
                    {{ projet.taches|length }} t√¢ches
                </span>
            </div>
            <p class="text-gray-600 mb-6">Cr√©ez des t√¢ches, assignez-les aux phases et aux membres de l'√©quipe.</p>
            <a href="{{ path('admin_project_configuration_tasks', {'id': projet.id}) }}" class="block w-full text-center py-2 px-4 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                G√©rer les T√¢ches
            </a>
        </div>

        {# Assignment & Planning Card #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-600">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800">Assignation</h2>
                </div>
                <span class="bg-gray-100 text-gray-600 py-1 px-3 rounded-full text-xs font-medium">
                    {% set assignedCount = 0 %}
                    {% for tache in projet.taches %}
                        {% if tache.assigne %}
                            {% set assignedCount = assignedCount + 1 %}
                        {% endif %}
                    {% endfor %}
                    {{ assignedCount }}/{{ projet.taches|length }}
                </span>
            </div>
            <p class="text-gray-600 mb-6">Assignez les t√¢ches aux membres, d√©finissez les priorit√©s et les deadlines.</p>
            <a href="{{ path('admin_project_configuration_assign', {'id': projet.id}) }}" class="block w-full text-center py-2 px-4 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                Assigner & Planifier
            </a>
        </div>
    </div>

    {# Configuration Status & Finalize Section #}
    {% set validation = projet.isReadyToFinalize() %}
    
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 mt-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-clipboard-check text-indigo-600"></i>
            √âtat de la Configuration
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# Checklist #}
            <div>
                <h3 class="font-semibold text-gray-700 mb-3">V√©rifications</h3>
                <div class="space-y-2">
                    <div class="flex items-center gap-2">
                        {% if projet.phases|length > 0 %}
                            <i class="fas fa-check-circle text-green-600"></i>
                            <span class="text-green-700">Au moins 1 phase cr√©√©e ({{ projet.phases|length }})</span>
                        {% else %}
                            <i class="fas fa-times-circle text-red-600"></i>
                            <span class="text-red-700">Aucune phase cr√©√©e</span>
                        {% endif %}
                    </div>
                    
                    <div class="flex items-center gap-2">
                        {% if projet.taches|length > 0 %}
                            <i class="fas fa-check-circle text-green-600"></i>
                            <span class="text-green-700">Au moins 1 t√¢che cr√©√©e ({{ projet.taches|length }})</span>
                        {% else %}
                            <i class="fas fa-times-circle text-red-600"></i>
                            <span class="text-red-700">Aucune t√¢che cr√©√©e</span>
                        {% endif %}
                    </div>
                    
                    <div class="flex items-center gap-2">
                        {% if validation.stats.assigned == validation.stats.tasks %}
                            <i class="fas fa-check-circle text-green-600"></i>
                            <span class="text-green-700">Toutes les t√¢ches assign√©es ({{ validation.stats.assigned }}/{{ validation.stats.tasks }})</span>
                        {% elseif validation.stats.assigned > 0 %}
                            <i class="fas fa-exclamation-triangle text-yellow-600"></i>
                            <span class="text-yellow-700">{{ validation.stats.assigned }}/{{ validation.stats.tasks }} t√¢ches assign√©es</span>
                        {% else %}
                            <i class="fas fa-times-circle text-orange-600"></i>
                            <span class="text-orange-700">Aucune t√¢che assign√©e</span>
                        {% endif %}
                    </div>
                </div>

                {# Warnings #}
                {% if validation.warnings|length > 0 %}
                    <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                        <p class="font-medium text-yellow-800 text-sm mb-1">
                            <i class="fas fa-exclamation-triangle mr-1"></i>Avertissements
                        </p>
                        <ul class="text-sm text-yellow-700 space-y-1">
                            {% for warning in validation.warnings %}
                                <li>‚Ä¢ {{ warning }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>

            {# Statistics #}
            <div>
                <h3 class="font-semibold text-gray-700 mb-3">R√©capitulatif</h3>
                <div class="space-y-3">
                    <div class="flex justify-between items-center p-3 bg-blue-50 rounded-lg">
                        <span class="text-gray-700">Phases cr√©√©es</span>
                        <span class="font-bold text-blue-600">{{ validation.stats.phases }}</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-green-50 rounded-lg">
                        <span class="text-gray-700">T√¢ches cr√©√©es</span>
                        <span class="font-bold text-green-600">{{ validation.stats.tasks }}</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-purple-50 rounded-lg">
                        <span class="text-gray-700">T√¢ches assign√©es</span>
                        <span class="font-bold text-purple-600">{{ validation.stats.assigned }}</span>
                    </div>
                </div>
            </div>
        </div>

        {# Action Buttons #}
        <div class="mt-6 flex justify-between items-center pt-4 border-t border-gray-200" style="background-color: white; padding: 20px;">
            <a href="{{ path('admin_project_details', {'id': projet.id}) }}" class="text-gray-600 hover:text-gray-800">
                <i class="fas fa-arrow-left mr-2"></i>Retour aux d√©tails
            </a>
            
            {# TEST BUTTON - SUPER VISIBLE #}
            <button 
                type="button" 
                onclick="alert('BOUTON CLIQU√â!'); openFinalizeModal();" 
                style="
                    background: linear-gradient(to right, #9333ea, #7e22ce);
                    color: white;
                    padding: 12px 24px;
                    border-radius: 8px;
                    font-weight: 600;
                    font-size: 18px;
                    border: 3px solid ;
                    cursor: pointer;
                    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                ">
                <i class="fas fa-check-circle" style="margin-right: 8px;"></i>
                 FINALISER LA CONFIGURATION üî•
            </button>
        </div>
    </div>

    {# Finalize Modal #}
    <div id="finalizeModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="bg-purple-600 px-6 py-4 rounded-t-lg shadow-lg">
                <h3 class="text-xl font-bold text-white flex items-center gap-2">
                    <i class="fas fa-check-circle"></i>
                    Finaliser la Configuration
                </h3>
            </div>

            <form method="post" action="{{ path('admin_project_configuration_finalize', {'id': projet.id}) }}">
                <div class="p-6 space-y-4">
                    <p class="text-gray-700">
                        Vous √™tes sur le point de finaliser la configuration du projet <strong>{{ projet.nom }}</strong>.
                        Cette action va :
                    </p>

                    <ul class="space-y-2 text-gray-700">
                        <li class="flex items-start gap-2">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span>Marquer le projet comme <strong>CONFIGUR√â</strong></span>
                        </li>
                        <li class="flex items-start gap-2">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span>Notifier tous les membres assign√©s ({{ validation.stats.assigned }} personne(s))</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span>Notifier le client du projet</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span>Enregistrer cette action dans l'historique</span>
                        </li>
                    </ul>

                    {% if validation.warnings|length > 0 %}
                        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                            <p class="font-medium text-yellow-800 mb-2">
                                <i class="fas fa-exclamation-triangle mr-1"></i>Points d'attention
                            </p>
                            <ul class="text-sm text-yellow-700 space-y-1">
                                {% for warning in validation.warnings %}
                                    <li>‚Ä¢ {{ warning }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div>
                        <label for="custom_message" class="block text-sm font-medium text-gray-700 mb-2">
                            Message personnalis√© (optionnel)
                        </label>
                        <textarea 
                            id="custom_message" 
                            name="custom_message" 
                            rows="3" 
                            class="w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500"
                            placeholder="Ajoutez un message qui sera envoy√© aux membres et au client..."></textarea>
                    </div>
                </div>

                <div class="bg-gray-50 px-6 py-4 rounded-b-lg flex justify-end gap-3">
                    <button type="button" onclick="closeFinalizeModal()" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors">
                        Annuler
                    </button>
                    <button type="submit"
                     style="background: #10b981;
                    color: white;
                    padding: 12px 24px;
                    border-radius: 8px;
                    font-weight: 600;
                    font-size: 18px;
                    border: 3px solid ;
                    cursor: pointer;
                    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);">
                        <i class="fas fa-check mr-2"></i>Confirmer la Finalisation
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openFinalizeModal() {
            document.getElementById('finalizeModal').classList.remove('hidden');
        }

        function closeFinalizeModal() {
            document.getElementById('finalizeModal').classList.add('hidden');
        }

        // Close modal on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeFinalizeModal();
            }
        });

        // Close modal on backdrop click
        document.getElementById('finalizeModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeFinalizeModal();
            }
        });
    </script>
</div>
{% endblock %}
