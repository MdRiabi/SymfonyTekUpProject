    <style>
        /* Ajout de styles personnalisés si nécessaire */
        .sidebar-item {
            transition: all 0.2s ease;
        }
        .sidebar-item:hover {
            transform: translateX(4px);
        }
        .project-card {
            transition: all 0.3s ease;
        }
        .project-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .sidebar {
            transition: transform 0.3s ease-in-out;
        }
        .sidebar-hidden {
            transform: translateX(-100%);
        }
        .sidebar-visible {
            transform: translateX(0);
        }
        
        /* Texte des éléments de la sidebar */
        .sidebar-text {
            transition: opacity 0.3s ease-in-out;
        }
        .sidebar-text-hidden {
            opacity: 0;
            visibility: hidden;
        }
        
        /* Tooltip pour les icônes quand la sidebar est compacte */
        .sidebar-tooltip {
            position: relative;
        }
        .sidebar-tooltip:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            left: 100%;
            top: 50%;
            transform: translateY(-50%);
            margin-left: 10px;
            background-color: #1f2937;
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            white-space: nowrap;
            font-size: 14px;
            z-index: 1000;
            pointer-events: none;
        }
        
        /* Overlay pour sidebar ouverte */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 40;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
        }
        .sidebar-overlay-active {
            opacity: 1;
            visibility: visible;
        }
        
        /* Logo text transition */
        .logo-text {
            transition: opacity 0.3s ease-in-out;
        }
        .logo-text-hidden {
            opacity: 0;
            visibility: hidden;
        }
        
        /* Optimisation de l'espace */
        .projects-container {
            height: calc(100vh - 88px); /* Hauteur totale moins l'en-tête */
            overflow-y: auto;
        }
        
        /* Scrollbar personnalisée */
        .projects-container::-webkit-scrollbar {
            width: 8px;
        }
        .projects-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }
        .projects-container::-webkit-scrollbar-thumb {
            background: #d1d5db;
            border-radius: 4px;
        }
        .projects-container::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }
        
        /* Sidebar en mode overlay */
        .sidebar-overlay-mode {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 50;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
        }
        
        /* Animation pour le bouton hamburger */
        .hamburger-btn {
            transition: all 0.3s ease;
        }
        .hamburger-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
