{% extends 'base.html.twig' %}

{% block title %}Dashboard - Symfony 360{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Dashboard</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Placeholder cards -->
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-4">Projects</h2>
                <p class="text-gray-600">Manage your projects here.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-4">Tasks</h2>
                <p class="text-gray-600">Track your tasks and progress.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-4">Reports</h2>
                <p class="text-gray-600">View project reports and analytics.</p>
            </div>
        </div>
    </div>
